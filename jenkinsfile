pipeline {
    agent any

    stages {
        stage('Test') {
            agent { node { label 'MAC' }}
            steps {
                echo 'Testing..'
                sh 'env'
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'bellsoft/liberica-openjdk-alpine'
                    label 'MAC'
                }
            }
            steps {
                sh 'cat /etc/os-release'
            }
        }
        stage('Deploy') {
            agent { node { label 'master' }}
            steps {
                echo 'Deploying....'
            }
        }
    }
}